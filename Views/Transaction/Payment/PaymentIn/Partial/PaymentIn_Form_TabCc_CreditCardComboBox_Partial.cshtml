@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "CreditCardName";
        settings.ReadOnly = true;
        
        settings.Properties.ClientInstanceName = "gvPaymentInCcDetail_CreditCardName";
        settings.Properties.DropDownWidth = 350;
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.Properties.ReadOnlyStyle.BackColor = System.Drawing.Color.Lavender;
        settings.Properties.ValidationSettings.Display = Display.Dynamic;

        settings.ShowModelErrors = true;
        settings.Width = 150;


        // Hide the default DropDown button
        settings.Properties.DropDownButton.Visible = false;
        settings.Properties.ButtonStyle.BackColor = System.Drawing.Color.FromName("#E0E0E0");
        EditButton lookUpButton = new EditButton();
        lookUpButton.Text = "";
        lookUpButton.Image.Url = "~/Content/Images/button/b_find.png";
        settings.Properties.Buttons.Add(lookUpButton);
        settings.Properties.ClientSideEvents.ButtonClick = "BtnCflCreditCardPopupListOnClick";

    }
    ).GetHtml()

